---
import Layout from "../layouts/Layout.astro";
import { ChatConfigSchema } from '../schema/chat';

import { Chart } from "../components/Chart";
// You can override any default values here
const chatConfig = ChatConfigSchema.parse({
  systemPrompt: [{
    type: "text" as const,
    text: "I am a landing page assistant focused on helping visitors understand our product."
  }],
  welcome: {
    message: "üëã Welcome! How can I help you learn about our product?",
    avatar: "/icon.svg",
    suggestions: [
      {
        label: "Product Features",
        prompt: "What are the main features of your product?"
      },
      {
        label: "üí° How can I use ONE commercially?",
        prompt: "I'm interested in using ONE for my business. Can you explain the commercial rights and possibilities under the ONE License?"
      },
      {
        label: "üöÄ Quick Start Guide",
        prompt: "What are the first 3 steps to get started with ONE for my project?"
      },
      {
        label: "üíº White-Label Options",
        prompt: "Tell me about the white-label possibilities with ONE. How can I brand it as my own solution?"
      },
      {
        label: "‚öñÔ∏è License Compatibility",
        prompt: "How does the ONE License work with other open source licenses? What are the key benefits?"
      },
      {
        label: "üîÑ Integration Help",
        prompt: "I want to integrate ONE into my existing system. What's the best approach?"
      }
    ]
  }
});

// Set the desired right panel mode
const rightPanelMode = 'quarter'; // You can change this to 'full', 'half', 'quarter', or 'hidden'
---
<Layout 
  title="Astro + shadcn/ui" 
  chatConfig={chatConfig}
  rightPanelMode={rightPanelMode}
>
	<section class="space-y-6 pb-8 pt-6 md:pb-12 md:pt-10 lg:py-32">
		<div class="flex flex-col items-center gap-4 text-center">
			<h1
				class="font-heading text-3xl sm:text-5xl md:text-6xl lg:text-7xl"
			>
				Build beautiful websites with Astro 5 and shadcn/ui
			</h1>
			<p
				class="max-w-[42rem] leading-normal text-muted-foreground sm:text-xl sm:leading-8"
			>
				A beautiful, modern website template built with Astro and
				shadcn/ui. Featuring dark mode, responsive design, and great
				typography.
			</p>
			<div class="space-x-4">
				<a
					href="https://ui.shadcn.com"
					class="inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground shadow transition-colors hover:bg-primary/90"
				>
					Documentation
				</a>
				<a
					href="https://github.com/one-ie/astro-shadcn"
					class="inline-flex items-center justify-center rounded-md border border-input bg-background px-4 py-2 text-sm font-medium shadow-sm transition-colors hover:bg-accent hover:text-accent-foreground"
				>
					GitHub
				</a>
			</div>
		</div>
	</section>

	<section class="space-y-6 py-8 md:py-12 lg:py-24">
		<Chart client:visible />
	</section>

	<section class="space-y-6 py-8 md:py-12 lg:py-24">
		<div class="mx-auto flex flex-col items-center space-y-4 text-center">
			<p
				class="max-w-[85%] leading-normal text-muted-foreground sm:text-lg sm:leading-7"
			>
				Optimized for the best possible performance and accessibility
			</p>
		</div>
		<div class="mx-auto grid max-w-4xl gap-6 grid-cols-2 md:grid-cols-4 items-start">
			<div
				class="relative overflow-hidden rounded-lg border bg-background p-2"
			>
				<div
					class="flex h-[150px] flex-col items-center justify-center rounded-md p-6 text-center"
				>
					<svg
						xmlns="http://www.w3.org/2000/svg"
