                    class="w-full"
                />
                <div class="text-center">
                    <div class="py-16">
                        <div class="container">
                            <h2 class="text-4xl font-bold text-center mb-4">
                                Amplify Your Creative Potential
                            </h2>
                            <p class="text-xl text-primary text-center mb-12">
                                Your AI agents combine these skills to amplify
                                your creative potential
                            </p>
                            <div
                                class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 w-full max-w-6xl mx-auto"
                            >
                                {
                                    page.agentSkills.map((skill) => (
                                        <Card className="p-6 hover:border-primary/50 transition-all duration-300 group">
                                            <div class="flex flex-col items-center text-center">
                                                <div class="mb-4 p-3 rounded-lg bg-primary/10 group-hover:bg-primary/20 transition-colors duration-300">
                                                    <skill.icon className="w-8 h-8 text-primary" />
                                                </div>
                                                <h3 class="text-xl font-semibold mb-3 group-hover:text-primary transition-colors duration-300">
                                                    {skill.title}
                                                </h3>
                                                <p class="text-muted-foreground leading-relaxed">
                                                    {skill.description}
                                                </p>
                                            </div>
                                        </Card>
                                    ))
                                }
                            </div>
                        </div>
                    </div>

                    <section class="w-full py-16">
                        <div class="container max-w-6xl mx-auto px-4">
                            <div class="text-center mb-12">
                                <h2 class="text-4xl font-bold mb-4">
                                    {page.results.title}
                                </h2>
                                <p class="text-xl text-primary">
                                    From Creative Challenges to Creative Freedom
                                </p>
                            </div>

                            <div
                                class="grid md:grid-cols-2 lg:grid-cols-4 gap-6"
                            >
                                {
                                    page.results.items.map((item) => (
                                        <Card className="group hover:border-primary/50 transition-all duration-300">
                                            <div class="p-6 flex flex-col items-center text-center h-full">
                                                <div class="mb-4 p-3 rounded-full bg-primary/10 group-hover:bg-primary/20 transition-colors duration-300">
                                                    <item.icon className="w-8 h-8 text-primary" />
                                                </div>
                                                <div class="space-y-2">
                                                    <p class="text-muted-foreground/80 text-sm line-through decoration-primary/30">
                                                        {item.before}
                                                    </p>
                                                    <p class="text-lg font-semibold text-primary group-hover:scale-105 transition-transform duration-300">
                                                        {item.after}
                                                    </p>
